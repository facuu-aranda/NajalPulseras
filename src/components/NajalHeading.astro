---
import { cn } from '@/lib/utils';

interface Props {
  level?: 1 | 2 | 3 | 4 | 5 | 6;
  variant?: "primary" | "secondary" | "dark" | "light"; // Agregu√© "light" para los textos blancos
  className?: string;
}

const { level = 1, variant = "dark", className } = Astro.props;

const Tag = `h${level}`;

const sizeClasses = {
  1: "text-4xl md:text-5xl lg:text-6xl",
  2: "text-3xl md:text-4xl lg:text-5xl",
  3: "text-2xl md:text-3xl lg:text-4xl",
  4: "text-xl md:text-2xl lg:text-3xl",
  5: "text-lg md:text-xl lg:text-2xl",
  6: "text-base md:text-lg lg:text-xl"
};

const variantClasses = {
  primary: "text-najal-primary",
  secondary: "text-najal-secondary",
  dark: "text-najal-primary-dark",
  light: "text-white", 
};

const finalClasses = cn(
  "font-futura font-bold tracking-tight",
  sizeClasses[level],
  variantClasses[variant],
  className
);
---

<Tag class={finalClasses}>
  <slot />
</Tag>