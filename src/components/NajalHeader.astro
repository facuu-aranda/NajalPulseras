---
import NajalLogo from '@/components/NajalLogo.astro';
import NajalButton from '@/components/NajalButton.astro';
import NajalHeaderMobile from './NajalHeaderMobile.tsx';
import ThemeToggle from './ThemeToggle.tsx';

interface NavItem {
  label: string;
  href: string;
}
interface Props {
  navigation?: NavItem[];
}
const { navigation = [] } = Astro.props;

const ctaText = "Contacto";
const ctaHref = "#comprar";
---
<header class="bg-background shadow-sm border-b border-border/20 sticky top-0 z-50 transition-colors duration-300">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-20">
      <a href="#Home">
        <NajalLogo size="sm" />
      </a>

      <nav class="hidden md:flex space-x-8">
        {navigation.map((item) => (
          <a
            href={item.href}
            class="font-futura text-foreground hover:text-najal-primary transition-colors"
          >
            {item.label}
          </a>
        ))}
      </nav>

      {/* ANTES: <div class="flex items-center space-x-4  md:block"> */}
      {/* AHORA: Contenedor correcto para escritorio */}
      <div class="hidden md:flex items-center space-x-4">
        <ThemeToggle client:idle />
        <NajalButton href={ctaHref}>{ctaText}</NajalButton>
      </div>

      {/* El menú móvil se mantiene igual */}
      <div class="md:hidden">
        <NajalHeaderMobile 
          client:visible
          navigation={navigation}
          ctaText={ctaText}
          ctaHref={ctaHref}
        />
      </div>
    </div>
  </div>
</header>
