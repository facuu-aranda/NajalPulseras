---
import NajalCard from "@/components/NajalCard.astro";
import NajalCardContent from "@/components/NajalCardContent.astro";
import NajalCardHeader from "@/components/NajalCardHeader.astro";
import NajalCardTitle from "@/components/NajalCardTitle.astro";
import NajalHeading from "@/components/NajalHeading.astro";
import NajalText from "@/components/NajalText.astro";
import { Icon } from "astro-icon/components";
import NajalPatternBackground from "@/components/NajalPatternBackground.astro";

interface Service {
  title: string;
  description: string;
  features: string[];
}
interface Props {
  services: Service[];
}
const { services } = Astro.props;
---
<NajalPatternBackground variant="dark" className="py-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <NajalHeading level={2} variant="primary" className="mb-4">Más que un producto, un servicio completo</NajalHeading>
      <NajalText size="lg" variant="light" className="max-w-2xl mx-auto">Te acompañamos en cada paso para asegurar que el resultado sea perfecto.</NajalText>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {services.map((service) => (
        <NajalCard>
          <NajalCardHeader>
            <NajalCardTitle>{service.title}</NajalCardTitle>
          </NajalCardHeader>
          <NajalCardContent>
            <NajalText className="mb-6">{service.description}</NajalText>
            <ul class="space-y-2">
              {service.features.map((feature) => (
                <li class="flex items-center">
                  <Icon name="lucide:check-circle" class="h-5 w-5 text-najal-primary mr-3 flex-shrink-0" />
                  <NajalText size="sm">{feature}</NajalText>
                </li>
              ))}
            </ul>
          </NajalCardContent>
        </NajalCard>
      ))}
    </div>
  </div>
</NajalPatternBackground>