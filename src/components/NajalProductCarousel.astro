---
<section class="py-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-12">
      <NajalHeading level={2} variant="primary">
        Nuestros Productos
      </NajalHeading>
    </div>
    
    <ProductCarousel
      client:visible
      items={products}
      opts={{
        align: "start",
        loop: true,
      }}
    />
  </div>
</section>