---
// src/components/NajalLogo.astro
import { Image } from 'astro:assets';
import logoSrc from '@/assets/isoTipo.png';
import { cn } from '@/lib/utils';

interface Props {
  variant?: "full" | "icon" | "text";
  size?: "sm" | "md" | "lg" | "xl";
  className?: string;
  // Eliminamos la prop 'theme'
}

const { variant = "full", size = "md", className = "" } = Astro.props;

const sizeClasses = {
  sm: "h-8",
  md: "h-12",
  lg: "h-16",
  xl: "h-24"
};

const textSizeClasses = {
  sm: "text-lg",
  md: "text-2xl",
  lg: "text-3xl",
  xl: "text-5xl"
};

// Ya no necesitamos la lógica de 'themeColorClass'

const finalContainerClasses = cn('inline-flex items-center gap-3', className);
---

{/* Variante de solo Ícono */}
{variant === 'icon' && (
  <div class:list={[finalContainerClasses, sizeClasses[size], 'gap-0']}>
    <Image src={logoSrc} alt="Najal Logo Icon" class="h-full w-auto object-contain" />
  </div>
)}

{/* Variante de solo Texto */}
{variant === 'text' && (
  <div class:list={[finalContainerClasses, 'gap-0']}>
    {/* Usamos 'text-foreground' que cambia automáticamente con el tema */}
    <span class:list={['font-futura font-bold tracking-wider text-foreground', textSizeClasses[size]]}>
      NAJAL
    </span>
  </div>
)}

{/* Variante Completa (default) */}
{variant === 'full' && (
  <div class={finalContainerClasses}>
    <div class:list={[sizeClasses[size], 'aspect-square relative']}>
      <Image 
  src={logoSrc} 
  alt="Najal Logo Icon" 
  class="h-full w-auto object-contain"
  width={32}
  height={32}
  densities={[1.5, 2]}
/>
    </div>
    {/* Usamos 'text-foreground' que cambia automáticamente con el tema */}
    <span class:list={['font-futura font-bold tracking-wider text-foreground', textSizeClasses[size]]}>
      NAJAL
    </span>
  </div>
)}
