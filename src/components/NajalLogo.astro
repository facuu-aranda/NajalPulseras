---
// src/components/NajalLogo.astro
import { Image } from 'astro:assets'; // El componente optimizado de Astro
import logoSrc from '@/assets/logoTipo.png'; // Importamos la imagen como si fuera un módulo
import { cn } from '@/lib/utils';

interface Props {
  variant?: "full" | "icon" | "text";
  size?: "sm" | "md" | "lg" | "xl";
  theme?: "light" | "dark" | "orange";
  className?: string;
}

const { variant = "full", size = "md", theme = "light", className = "" } = Astro.props;

const sizeClasses = {
  sm: "h-8",
  md: "h-12",
  lg: "h-16",
  xl: "h-24"
};

const textSizeClasses = {
  sm: "text-lg",
  md: "text-2xl",
  lg: "text-3xl",
  xl: "text-5xl"
};

let themeColorClass = "text-najal-primary-dark";
if (theme === 'dark' || theme === 'orange') {
  themeColorClass = "text-white";
}

const finalContainerClasses = cn('inline-flex items-center gap-3', className);
---

{/* Variante de solo Ícono */}
{variant === 'icon' && (
  <div class:list={[finalContainerClasses, sizeClasses[size], 'gap-0']}>
    <Image src={logoSrc} alt="Najal Logo Icon" class="h-full w-auto object-contain" />
  </div>
)}

{/* Variante de solo Texto */}
{variant === 'text' && (
  <div class:list={[finalContainerClasses, 'gap-0']}>
    <span class:list={['font-futura font-bold tracking-wider', textSizeClasses[size], themeColorClass]}>
      NAJAL
    </span>
  </div>
)}

{/* Variante Completa (default) */}
{variant === 'full' && (
  <div class={finalContainerClasses}>
    <div class:list={[sizeClasses[size], 'aspect-square relative']}>
      <Image src={logoSrc} alt="Najal Logo" class="h-full w-full object-contain" />
    </div>
    <span class:list={['font-futura font-bold tracking-wider', textSizeClasses[size], themeColorClass]}>
      NAJAL
    </span>
  </div>
)}