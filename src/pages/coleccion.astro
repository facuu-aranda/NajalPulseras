---
import Layout from '@/layouts/Layout.astro';
import NajalHeader from '@/components/NajalHeader.astro';
import NajalHero from '@/components/NajalHero.astro';
import NajalProductCarousel from '@/components/NajalProductCarousel.astro';
import NajalCTASection from '@/components/NajalCTASection.astro';
import NajalHeading from '@/components/NajalHeading.astro';
import NajalText from '@/components/NajalText.astro';
import { Image } from 'astro:assets';
import featureImage from '@/assets/elegant-solution.png';

const navItems = [
  { label: "Destacados", href: "#destacados" },
  { label: "Detalles", href: "#detalles" },
  { label: "Comprar", href: "#comprar" },
];
---
<Layout title="Nueva Colección - Najal Pulseras">
  <NajalHeader navigation={navItems} />
  
  <main>
    <NajalHero
      variant="light"
      subtitle="Colección Verano 2025"
      title="Energía y Color en Cada Detalle"
      description="Inspirada en los atardeceres de verano, esta colección combina piedras naturales con metales preciosos para un look vibrante y sofisticado."
      primaryCTA={{ text: "Explorar Diseños", href: "#destacados" }}
    />

    <div id="destacados">
      <NajalProductCarousel />
    </div>

    <!-- Sección de detalles sin patrón de fondo -->
    <section id="detalles" class="py-20 bg-background">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 grid md:grid-cols-2 gap-12 items-center">
        <div class="order-2 md:order-1">
          <NajalHeading level={2} variant="primary" className="mb-4">Hecho a Mano, con Pasión</NajalHeading>
          <NajalText variant="light" className="mb-4">
            Cada pulsera de la colección es ensamblada a mano por nuestros artesanos, asegurando una calidad y un acabado impecables. Utilizamos solo plata de ley y piedras semipreciosas seleccionadas por su color y energía.
          </NajalText>
          <ul class="space-y-2 text-foreground">
            <li class="flex items-center"><svg class="w-4 h-4 mr-2 text-najal-secondary" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path></svg>Plata de Ley 925</li>
            <li class="flex items-center"><svg class="w-4 h-4 mr-2 text-najal-secondary" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path></svg>Piedras Naturales</li>
          </ul>
        </div>
        <div class="order-1 md:order-2">
          <Image src={featureImage} alt="Detalle de pulsera" class="rounded-lg shadow-xl w-full h-auto" />
        </div>
      </div>
    </section>

    <div id="comprar">
      <NajalCTASection />
    </div>
  </main>
</Layout>
