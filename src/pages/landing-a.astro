---
import Layout from '@/layouts/Layout.astro';
import NajalHeader from '@/components/NajalHeader.astro';
import NajalHero from '@/components/NajalHero.astro';
import NajalServicesSection from '@/components/NajalServicesSection.astro';
import NajalAboutSection from '@/components/NajalAboutSection.astro';
import NajalCTASection from '@/components/NajalCTASection.astro';

const navItems = [
  { label: "Servicios", href: "#servicios" },
  { label: "Nosotros", href: "#nosotros" },
  { label: "Contacto", href: "#contacto" },
];
---
<Layout title="Landing Page A - Najal">
  <NajalHeader navigation={navItems} />
  
  <main>
    <NajalHero
      variant="dark"
      subtitle="Soluciones Innovadoras"
      title="Potenciamos tu Marca con Diseño y Tecnología"
      description="Creamos experiencias digitales memorables que conectan con tu audiencia y generan resultados."
      primaryCTA={{ text: "Nuestros Servicios", href: "#servicios" }}
      secondaryCTA={{ text: "Contáctanos", href: "#contacto" }}
    />
    <div id="servicios">
      <NajalServicesSection />
    </div>
    <div id="nosotros">
      <NajalAboutSection variant="dark" />
    </div>
    <div id="contacto">
      <NajalCTASection />
    </div>
  </main>
</Layout>
